<%# app/views/home/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <div class="text-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Welcome to ClientManager</h1>
    <p class="text-xl text-gray-600 mb-8">Your comprehensive client management solution</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h2 class="text-xl font-semibold text-blue-600 mb-3">Clients</h2>
        <p class="text-gray-600 mb-4">Manage your client information, contact details, and status updates.</p>
        <%= link_to "View Clients", clients_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h2 class="text-xl font-semibold text-blue-600 mb-3">Claims</h2>
        <p class="text-gray-600 mb-4">Track and process claims efficiently with our intuitive interface.</p>
        <%= link_to "View Claims", claims_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h2 class="text-xl font-semibold text-blue-600 mb-3">Leads</h2>
        <p class="text-gray-600 mb-4">Capture and convert leads with our streamlined process.</p>
        <%= link_to "View Leads", leads_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>